<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_product_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineHeight="19dp"
            android:maxLines="2"
            android:text="Màn hình LCD 31.5"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineHeight="19dp"
                android:maxLines="1"
                android:text="19.0000.000"
                android:textColor="@color/colorTomato"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:lineHeight="20dp"
                android:maxLines="1"
                android:text="đ"
                android:textColor="@color/colorTomato"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="16dp"
                android:maxLines="2"
                android:text="29.000.000"
                android:textColor="@color/colorCoolGrey"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="15dp"
                android:layout_marginStart="4dp"
                android:rotation="180"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_percent_sale"
                android:maxLines="2"
                android:paddingEnd="2dp"
                android:text="-30%"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</layout>